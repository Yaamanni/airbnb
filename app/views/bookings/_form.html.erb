<%= image_tag("house1.jpeg", class: "d-block w-100 page__listing") %>
<h1><%= @listing.title %></h1>
<h6><i class="fas fa-star"></i> 4.8</h6>
<div class="booking__bar"></div>
<%= simple_form_for([@listing, @booking]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
  </div>
  <div class="booking">
  <h1>Your Trip</h1>
   <div class="container">
    <div class="row justify-content-center">
      <div class="col-sm-8 text-center">
        <div class="form-container">
          <div class="header">
            <div class="header-row">
              <div class="big-bold" id="price" data-amount-cents="<%= @listing.price %>">$<%= @listing.price %></div>
              <div class="small-light"> / night</div>
            </div>
          </div>
          <div>
            <%= f.input :start_date, as: :date, html5: true %>
            <%= f.input :end_date, as: :date, html5: true %>
          </div>

          <div class="flex-between">
            Guests:
            <div class="actions">
              <a class="btn round-bordered increase minus" data-offset="-1">-</a>
              <%= f.hidden_field :num_of_guests, value: 1, id: "guestValue" %>
              <span id="guestCounter" data-guestcount="1">1</span>
              <a href="#guestCounter" class="btn round-bordered increase" data-offset="1">+</a>
            </div>
          </div>

          <div class="flex-between">
            Nights:
            <div class="actions">
              <a class="btn round-bordered incrementer minus" data-offset="-1">-</a>
              <span id="counter" data-count="1">1</span>
              <a href="#counter" class="btn round-bordered incrementer" data-offset="1">+</a>
            </div>
          </div>

          <form>
            <input type="number" value=<%= @listing.price %> disabled class="form-control" id="price-input" name="price-cents">
            <input type="submit" value="Pay $<%= @listing.price %>" class="btn btn-primary" id="submit">
          </form>
        </div>

      </div>
    </div>
  </div>
<% end %>
